<div class='container animated slideInLeft fast'>

<p id="notice"><%= notice %></p>

<div class='header'>
  <h1>Questions</h1>
  <a class='btn-floating btn-large waves-effect waves-light red'
     href= <%= new_question_path %>>
    <i class='material-icons'>add</i>
  </a>
</div>

<table>
  <tbody>
    <% @questions.each do |question| %>
      <tr class='highlight' data-href= <%= question %> >
        <td class='just_column_name'><%= question.title %></td>
        <td><%= link_to 'visibility', question, class: 'material-icons' %></td>
        <td><%= link_to 'edit', edit_question_path(question), class: 'material-icons' %></td>
        <td><%= link_to 'delete', question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'material-icons' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>