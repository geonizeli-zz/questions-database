<% if notice %>
  <p class="alert animated zoomIn faster" id="notice"><%= notice %></p>
<% end %>

<div class='header'>
  <h3>Subject</h3>
  <%= link_to :back, class: 'btn btn-secondary' do %>
    Voltar
  <% end %>
</div>

<div class='box'>
  <h3><%= @subject.name %></h3>

  <% unless @subject.courses.empty? %>
    <ul>
    <% @subject.courses.each do |course| %>
      <li><%= course.name %></li>
    <% end %>
    </ul>
  <% else %>
    <p>This subject is not linked to any courses.</p>
  <% end %>

  <div class='actions'>
    <%= link_to I18n.t('action.edit'), edit_subject_path(@subject), class: 'btn btn btn-secondary' %>
  <div>
</div>