<div class='container animated fadeInLeft faster'>

<p id="notice"><%= notice %></p>

<div class='header'>
  <h1>Overview</h1>
</div>

<div>
  <div class='header'>
    <h3>Access</h3>
    <a class='btn-floating btn-large waves-effect waves-light red'
       href= <%= new_user_registration_path %>>
      <i class='material-icons'>add</i>
    </a>
  </div>
  <table>
    <thead>
      <th>Access</th>
      <th>Email</th>
      <th>Questions</th>
      <th><th>
    </thdead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.questions.count %></td>
        <td><%= link_to 'delete', admin_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'material-icons' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>

<div>
  <div class='header'>
  <h3>Courses</h3>
    <a class='btn-floating btn-large waves-effect waves-light red'
       href= <%= new_course_path %>>
