    <thead>
      <th class='just_column_name'>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </thdead>
    <tbody>
      <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= link_to 'visibility', course, class: 'material-icons' %></td>
        <td><%= link_to 'edit', edit_course_path(course), class: 'material-icons' %></td>
        <td><%= link_to 'delete', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'material-icons' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>

